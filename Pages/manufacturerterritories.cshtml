@page
@model LuxeIQ.Pages.manufacturerterritoriesModel
@{
    ViewData["Title"] = "Territories";
}

<div class="container-full">

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Territories</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form method="post" asp-page-handler="Import" enctype="multipart/form-data">
                            <div class="row bg-light mb-10 p-10" style="padding-bottom:0px !important">
                               @*  <div class="form-group col-sm-3">
                                    <select class="form-select" id="ddManufacturer" name="ddlManufacturer" required>
                                        @if (Model != null && Model.manufacturers != null && Model.manufacturers.Count() > 0)
                                        {
                                            <option>Select Manufacturer</option>
                                            @foreach (var app in Model.manufacturers)
                                            {
                                                <option value="@app.manufacturerId">@app.businessName</option>
                                            }
                                        }
                                    </select>
                                </div> *@
                                <div class="form-group col-sm-3">
                                    Import Headquarters
                                </div>
                                <div class="col-xs-9 col-sm-9 row">
                                    <div class="col-sm-9">
                                        <input class="form-control form-control-sm" name="fileInput" id="uploadFile" type="file">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="submit" value="Import" name="btnsubmit" onclick="return confirmupload();" />
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="table-responsive">
                            <table id="example5" class="table table-bordered table-striped" style="width: 100%;">
                                <thead>
                                    <tr> 
                                        <th>Rep Code</th>
                                        <th>Sales Agency</th>
                                        <th>Sales Region</th>
                                        <th>Sales Territory</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.manufacturersTerritory != null && Model.manufacturersTerritory.Count() > 0)
                                    {
                                        @foreach (var app in Model.manufacturersTerritory)
                                        {
                                            <tr>
                                                <td>
                                                    @app.repCode
                                                </td>
                                                <td>
                                                    @app.salesAgency
                                                </td>
                                                <td>
                                                    @app.salesRegion
                                                </td>
                                                <td>
                                                    @app.salesTerritory
                                                </td>
                                                <td>
                                                    <form asp-page="addeditmterritories" asp-page-handler="view" asp-route-type="View" asp-route-id="@app.territoryId" method="post">
                                                        <button class="btn btn-xs btn-primary">View</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
@section Scripts {
    <script src="~/assets/vendor_components/datatable/datatables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // DataTable
            $('#example5').DataTable();

        });
        function confirmupload() {
            if (document.getElementById("uploadFile").value == undefined || document.getElementById("uploadFile").value == "") {
                alert("Select a file to upload");
                return false;
            }
            else {
                return true;
            }
        }
    </script>
}