@page
@using LuxeIQ.Common
@using LuxeIQ.ViewModels

@model addeditwshowroomModel
@{
    ViewData["Title"] = "Wholesaler Showroom";
}
<div class="container-full">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">View Wholesaler Showroom</h3>
                    </div>
                    <div class="box-body">
                        <form method="post">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Wholesaler</label>
                                        @if (Model != null && Model.wshowroom.wholesalerId > 0)
                                        {
                                            <select class="form-select" id="ddWholesaler" name="wshowroom.wholesalerId" value="@Model.wshowroom.wholesalerId" data-val="true" data-val-required="Select Wholesaler">
                                                @if (Model.wholesalers != null && Model.wholesalers.Count() > 0)
                                                {
                                                    <option>Select Wholesaler</option>
                                                    @foreach (var app in Model.wholesalers)
                                                    {
                                                        @if (app.wholesalerId == Model.wshowroom.wholesalerId)
                                                        {
                                                            <option selected="selected" value="@app.wholesalerId">@app.businessName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@app.manufacturerId">@app.businessName</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        }
                                        else
                                        {
                                            <select class="form-select" id="ddWholesaler" name="wshowroom.wholesalerId" value="@Model.wshowroom.wholesalerId" data-val="true" data-val-required="Select Wholesaler">
                                            </select>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Business Name</label>
                                        @Html.TextBoxFor(model => model.wshowroom.businessName, new { @class = "form-control", tabindex = "1", @placeholder = "Business Name" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.businessName)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Branch Number</label>
                                        @Html.TextBoxFor(model => model.wshowroom.branchNumber, new { @class = "form-control", tabindex = "2", @placeholder = "Branch Number" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.branchNumber)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Address1</label>
                                        @Html.TextBoxFor(model => model.wshowroom.address1, new { @class = "form-control", tabindex = "3", @placeholder = "Address1" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.address1)
                                    </div>
                                </div>
                                
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Address2</label>
                                        @Html.TextBoxFor(model => model.wshowroom.address2, new { @class = "form-control", tabindex = "4", @placeholder = "Address2" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.address2)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">City</label>
                                        @Html.TextBoxFor(model => model.wshowroom.city, new { @class = "form-control", tabindex = "5", @placeholder = "City" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.city)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">State</label>
                                        @Html.TextBoxFor(model => model.wshowroom.state, new { @class = "form-control", tabindex = "6", @placeholder = "State" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.state)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Zipcode</label>
                                        @Html.TextBoxFor(model => model.wshowroom.zipcode, new { @class = "form-control", tabindex = "7", @placeholder = "Zipcode" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.zipcode)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Country</label>
                                        @Html.TextBoxFor(model => model.wshowroom.country, new { @class = "form-control", tabindex = "8", @placeholder = "Country" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.country)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Phone</label>
                                        @Html.TextBoxFor(model => model.wshowroom.phoneNumber, new { @class = "form-control", tabindex = "9", @placeholder = "Phone" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.phoneNumber)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Contact Name</label>
                                        @Html.TextBoxFor(model => model.wshowroom.contactName, new { @class = "form-control", tabindex = "10", @placeholder = "Contact Name" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.contactName)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Contact Mail</label>
                                        @Html.TextBoxFor(model => model.wshowroom.contactMail, new { @class = "form-control", tabindex = "11", @placeholder = "Contact Mail" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.contactMail)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Territory Name</label>
                                        @Html.TextBoxFor(model => model.wshowroom.territoryName, new { @class = "form-control", tabindex = "12", @placeholder = "Territory Name" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.territoryName)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Territory Number</label>
                                        @Html.TextBoxFor(model => model.wshowroom.territoryNumber, new { @class = "form-control", tabindex = "13", @placeholder = "Territory Number" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.territoryNumber)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Sales Agency</label>
                                        @Html.TextBoxFor(model => model.wshowroom.salesAgency, new { @class = "form-control", tabindex = "14", @placeholder = "Sales Agency" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.salesAgency)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Sales Rep</label>
                                        @Html.TextBoxFor(model => model.wshowroom.salesRep, new { @class = "form-control", tabindex = "15", @placeholder = "Sales Rep" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.salesRep)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Buying Multiplier</label>
                                        @Html.TextBoxFor(model => model.wshowroom.buyingMultiplier, new { @class = "form-control", tabindex = "16", @placeholder = "Buying Multiplier" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.buyingMultiplier)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Manufacturer Account No</label>
                                        @Html.TextBoxFor(model => model.wshowroom.manufacturerAccountNo, new { @class = "form-control", tabindex = "17", @placeholder = "Manufacturer Account No" })
                                        @Html.ValidationMessageFor(model => model.wshowroom.manufacturerAccountNo)
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">
                                @* <a type="button" class="btn btn-block btn-danger" asp-area="" asp-page="/users">Cancel</a>
                                <input class="btn btn-block btn-primary" type="submit" name="btnSave" value="Submit" /> *@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <script type="text/javascript">
        Helpers.setFormDefaultValidator();
        $(document).ready(function () {

            if ("@Model.action" == "View") {
                $("input[class='form-control']").attr("disabled", "disabled");
                $("select[class='form-select']").attr("disabled", "disabled");
            }
            $('form').data('validator', null);
            $.validator.unobtrusive.parse($('form'));
        });
    </script>
}