                                <h5 class="widget-user-desc text-white" style="display:@((Model.user != null && Model.user.userType =="W" && Model.user.WholesalerId > 0)?"flex":"none");">
                                @if (Model != null && Model.user.WholesalerId > 0)
                                {
                                @if (Model.wholesalers != null && Model.wholesalers.Count() > 0)
                                {
                                @foreach (var app in Model.wholesalers)
                                {
                                @if (app.wholesalerId == Model.user.WholesalerId)
                                {
                                <span>@app.businessName</span>
                                }
                                }
                                }
                                }
                                </h5>
                                <h5 class="widget-user-desc text-white" style="display:@((Model.user != null && Model.user.userType =="SA" && Model.user.MTerritoryId > 0)?"flex":"none");">
                                @if (Model != null && Model.user.MTerritoryId > 0)
                                {
                                @if (Model.manufacturersTerritory != null && Model.manufacturersTerritory.Count() > 0)
                                {
                                @foreach (var app in Model.manufacturersTerritory)
                                {
                                @if (app.territoryId == Model.user.MTerritoryId)
                                {
                                <span>@app.salesTerritory</span>
                                }
                                }
                                }
                                }
                                </h5>
                                <h5 class="widget-user-desc text-white" style="display:@((Model.user != null && Model.user.userType =="SH" && Model.user.WholesalerShowroomId > 0)?"flex":"none");">
                                @if (Model != null && Model.user.WholesalerShowroomId > 0)
                                {
                                @if (Model.wholesalershowroom != null && Model.wholesalershowroom.Count() > 0)
                                {
                                @foreach (var app in Model.wholesalershowroom)
                                {
                                @if (app.showroomId == Model.user.WholesalerShowroomId)
                                {
                                <label>@app.businessName</label>
                                }
                                }
                                }
                                }
                                </h5>

                                <h6 class="widget-user-desc text-white">
                                @if (Model != null && Model.user != null)
                                {
                                @if (!string.IsNullOrEmpty(Model.user.userType))
                                {
                                @if (LuxeIQ.Common.Utilities.ParseEnum<UserType>(Model.user.userType) == UserType.M)
                                {
                                <span>Manufacturer Admin</span>
                                }
                                else if (LuxeIQ.Common.Utilities.ParseEnum<UserType>(Model.user.userType) == UserType.W)
                                {
                                <span>Wholesaler Admin</span>
                                }
                                else if (LuxeIQ.Common.Utilities.ParseEnum<UserType>(Model.user.userType) == UserType.SA)
                                {
                                <span>Manufacturer Rep</span>
                                }
                                else if (LuxeIQ.Common.Utilities.ParseEnum<UserType>(Model.user.userType) == UserType.SH)
