@page
@model LuxeIQ.Pages.addeditsalesrepagencyModel
@{
    ViewData["Title"] = "Sales Rep Agency";
}
<div class="container-full">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">View Sales Rep Agency</h3>
                    </div>
                    <div class="box-body">
                        <form method="post">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Sales Rep Name</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.salesRepAgencyName, new { @class = "form-control", tabindex = "0", @placeholder = "Business Name" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.salesRepAgencyName)
                                        @Html.HiddenFor(model => model.salesRepAgency.salesRepAgencyId)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Address1</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.address1, new { @class = "form-control", tabindex = "1", @placeholder = "Address1" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.address1)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Address2</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.address2, new { @class = "form-control", tabindex = "2", @placeholder = "Address2" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.address2)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">City</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.city, new { @class = "form-control", tabindex = "3", @placeholder = "City" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.city)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">State</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.state, new { @class = "form-control", tabindex = "4", @placeholder = "State" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.state)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Zipcode</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.zipcode, new { @class = "form-control", tabindex = "5", @placeholder = "Zipcode" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.zipcode)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Country</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.country, new { @class = "form-control", tabindex = "6", @placeholder = "Country" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.country)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Administrator</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.administrator, new { @class = "form-control", tabindex = "7", @placeholder = "Purchase Multiplier" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.administrator)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Administrator Mail</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.administratorMail, new { @class = "form-control", tabindex = "7", @placeholder = "Purchase Multiplier" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.administratorMail)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Territory Name</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.territoryName, new { @class = "form-control", tabindex = "7", @placeholder = "Purchase Multiplier" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.territoryName)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Territory Number</label>
                                        @Html.TextBoxFor(model => model.salesRepAgency.territoryNumber, new { @class = "form-control", tabindex = "7", @placeholder = "Purchase Multiplier" })
                                        @Html.ValidationMessageFor(model => model.salesRepAgency.territoryNumber)
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">
                                @* <a type="button" class="btn btn-block btn-danger" asp-area="" asp-page="/users">Cancel</a>
                                <input class="btn btn-block btn-primary" type="submit" name="btnSave" value="Submit" /> *@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <script type="text/javascript">
        Helpers.setFormDefaultValidator();
        $(document).ready(function () {

            if ("@Model.action" == "View") {
                $("input[class='form-control']").attr("disabled", "disabled");
                $("select[class='form-select']").attr("disabled", "disabled");
            }
            $('form').data('validator', null);
            $.validator.unobtrusive.parse($('form'));
        });
    </script>
}