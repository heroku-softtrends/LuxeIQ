@page
@using LuxeIQ.Models
@model LuxeIQ.Pages.manufacturersModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-full">
    @* <div class="content-header">
    <div class="d-flex align-items-center">
    <div class="me-auto">
    <h4 class="page-title">Manufacturers</h4>

    </div>

    </div>
    </div>*@
    <!-- Main content -->
    <section class="content">
        <div class="row">


            <div class="col-12">

                <div class="box">
                    <div class="box-header with-border">
                        <div class="row col-md-12">
                            <div class="col-md-9">
                                <h3 class="box-title">Manufacturers</h3>
                            </div>
                            <div class="col-md-3 text-end pb-15">
                                <a asp-area="" class="btn btn-block btn-info" asp-page="/addeditmanufacturer" asp-route-type="Add">
                                    <span>Add Manufacturer</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <form method="post" asp-page-handler="Import" enctype="multipart/form-data">
                            <div class="row bg-light mb-10 p-10">
                                <div class="col-xs-12 col-sm-12 row">
                                    <div class="col-sm-9">
                                        <input class="form-control form-control-sm" name="fileInput" id="uploadFile" type="file">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="submit" value="Import" name="btnsubmit" onclick="return confirmupload();" />
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="table-responsive">
                            <table id="example5" class="table table-bordered table-striped" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Contact Name</th>
                                        <th>Email</th>
                                        <th>Country</th>
                                        <th>Phone</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.manufacturers != null && Model.manufacturers.Count() > 0)
                                    {

                                        @foreach (var app in Model.manufacturers)
                                        {
                                            <tr>
                                                <td>
                                                    @app.businessName
                                                </td>
                                                <td>
                                                    <span>@app.address1</span>&nbsp;<span>@app.address2</span>
                                                </td>
                                                <td>
                                                    @app.contactName
                                                </td>
                                                <td>
                                                    @app.contactEmail
                                                </td>
                                                <td>
                                                    @app.country
                                                </td>
                                                <td>
                                                    @app.phone
                                                </td>
                                                <td>
                                                    <a asp-page="addeditmanufacturer" class="btn btn-xs btn-primary" asp-page-handler="view" asp-route-type="View" asp-route-id="@app.manufacturerId">
                                                        <span>View</span>
                                                    </a>
                                                    <a asp-page="addeditmanufacturer" class="btn btn-xs btn-primary" asp-page-handler="view" asp-route-type="Edit" asp-route-id="@app.manufacturerId">
                                                        <span>Edit</span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
@section Scripts {
    <script src="~/assets/vendor_components/datatable/datatables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // DataTable
            $('#example5').DataTable();

           
        });
        function confirmupload() {
            if (document.getElementById("uploadFile").value == undefined || document.getElementById("uploadFile").value == "") {
                alert("Select a file to upload");
                return false;
            }
            else {
                return true;
            }
        }
    </script>
}