                                </div>
                                </div>
                                </div> *@
                                <form method="post">
                                    <div class="col-md-12">
                                        <div class="form-group clearfix">
                                            <label class="col-sm-3 col-form-label">Password</label>
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.user.password, new { @class = "form-control", @type = "password", @placeholder = "enter password" })
                                                @Html.ValidationMessageFor(model => model.user.password)
                                                @Html.HiddenFor(model => model.user.userId)
                                                @Html.HiddenFor(model => model.user.ManufacturerId)
                                                @Html.HiddenFor(model => model.user.MTerritoryId)
                                                @Html.HiddenFor(model => model.user.WholesalerId)
                                                @Html.HiddenFor(model => model.user.WholesalerShowroomId)
                                                @Html.HiddenFor(model => model.user.userType)
                                                @Html.HiddenFor(model => model.user.zipCode)
                                                @Html.HiddenFor(model => model.user.address)
                                                @Html.HiddenFor(model => model.user.city)
                                                @Html.HiddenFor(model => model.user.state)
                                                @Html.HiddenFor(model => model.user.country)
                                                @Html.HiddenFor(model => model.user.email)
                                                @Html.HiddenFor(model => model.user.name)
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="col-sm-4 col-form-label">Confirm Password</label>
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.user.confirmpassword, new { @class = "form-control", @type = "password", @placeholder = "confirm password" })
                                                @Html.ValidationMessageFor(model => model.user.confirmpassword)
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="col-sm-4 col-form-label">Phone</label>
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.user.phone, new { @class = "form-control", @type = "number", @maxlength = "10", @placeholder = "enter phone number" })
                                                @Html.ValidationMessageFor(model => model.user.phone)
                                            </div>
                                        </div>
                                        <div class="form-group clearfix">
                                            <label class="col-sm-4 col-form-label">WhatsApp Mobile</label>
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.user.whatsappMobile, new { @class = "form-control", @type = "number", @maxlength = "10", @placeholder = "enter whatsapp mobile" })
                                                @Html.ValidationMessageFor(model => model.user.whatsappMobile)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="box-footer text-end">
                                        <a type="button" name="reset" class="btn btn-block btn-warning">Reset</a>
                                        <input class="btn btn-block btn-primary" type="submit" name="btnSave" value="Submit" />
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="wrapper" style="height:0% !important">
        <div id="loader"></div>
    </div>
    <!-- Vendor JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/vendors.min.js"></script>
    <script src="~/js/pages/chat-popup.js"></script>
    <script src="~/assets/icons/feather-icons/feather.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/helpers.js"></script>
    <script type="text/javascript">
        Helpers.setFormDefaultValidator();
        $(document).ready(function () {

            $('a[name=reset]').on("click", function (e) {
                $("input[class='form-control']").val("");
            });
            $('input[type=submit]').on("click", function (e) {
                $("form").find("input,textarea,select").each(function () {
                    if ($(this).is(":visible") && $(this).attr("id") != "user_whatsappMobile") {
                        $(this).prop("disabled", false).rules('add', {
                            required: true
                        });
                    }
                    else {
                        //alert($(this).attr("id"));
                        $(this).rules('remove', 'required');
                    }
                });
                if (!$("form").valid()) {
                    e.preventDefault();
                    return;
                }
                else if ($("#user_password").val() != $("#user_confirmpassword").val()) {

                    alert('Password must match with confirm password');
                    e.preventDefault();
                    return;
                }
                else if ($("#user_password").val() == $("#user_confirmpassword").val()) {
                    var password = new RegExp("^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9]).{8,}$", "ig");
                    if (!password.test($("#user_password").val())) {
                        alert('Password should contain minimum eight characters, at least one letter and one number');
                        e.preventDefault();
                        return;
                    }
                }
            });
            $('form').data('validator', null);
            $.validator.unobtrusive.parse($('form'));
        });
    </script>
</body>
</html>

